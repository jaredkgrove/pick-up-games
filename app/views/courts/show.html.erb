<h1><%= @court.name %></h1>
<h2>Address: <%= @court.location %></h2>
<%= button_to (@court.is_favorite?(current_player) ? "Remove from Favorites" : "Add to Favorites"), court_path(@court), :method => :patch  %>

<h2>Favorited By <%= @court.favorite_count %> Players</h2>

<h2>Upcoming Games</h2>
<div class="games_list">
    <% @court.upcoming_games.each do |game|%>
        <%= link_to "#{display_date_and_time(game.time)} (#{game.player_count})", court_game_path(@court, game) %> <br>
    <% end %>
</div>

<% if current_player %>
    <h2>Create New Game</h2>
    <%= form_tag(court_games_path(@court)) do%>
        <%= hidden_field_tag "game[court_id]", @court.id %>
        Skill Level: <%= select_tag "game[skill_level]", options_for_select(Game.skill_level_array, Game.skill_level_array.first) %> <br>
        Time: <%= datetime_field_tag "game[time]", current_time_for_form_tag %> <br>

        <%= submit_tag "Create Game" %>
    <% end%>
<% end %>

