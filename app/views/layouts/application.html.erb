<!DOCTYPE html>
<html>
  <head>
    <title>PickUpGames</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div>Pick Up Logo</div>
      <nav>
        <ul>
          <li><%= link_to "Home", root_url %></li>
          <li><%= link_to 'Courts', courts_path %></li>
          <li><%= link_to 'Squads', squads_path %></li>
          <% if current_player %>
            <li><%= link_to 'My Profile', player_path(current_player) %></li>
            <li><%= link_to 'Log Out', logout_path, :method => :post %></li>
          <% else%>
            <li><%= link_to "Sign Up", new_player_url %></li>
            <li><%= link_to "Log In", login_url %></li>
          <% end %>
        </ul>
      </nav>
    </header>

 

    <!-- content -->
    <main>
        <% flash.each do |key, messages| %>
          <% messages.each do |message|%>
            <div class="alert alert-<%= key %>"><%= message %></div>
          <% end %>
        <% end %>
      <%= yield %>
    </main>
  </body>
</html>
