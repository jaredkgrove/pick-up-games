<h1><%= @squad.name %></h1>
<div class="squad">
   
    <div class="content-box">
        <h2>Players</h2>
        <div>
            <% @squad.players.each do |player|%>
                    <%= link_to player.name, player_path(player) %>
                    <%= " - ADMIN " if player.is_admin_of?(@squad) %>
                    <%= render "games/player_admin_buttons", game_or_squad: @squad, player: player, path: squad_path(@squad) %> <br>
            <% end %>
        </div>
    </div>
</div>